<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tocong.mymobilesafe.chapter04.AppMnaagerActivity"
    android:orientation="vertical"
    >

    <include layout="@layout/titlebar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >
        <TextView
            style="@style/textview12sp"
            android:id="@+id/tv_phonememory_appmanager"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/tv_sdmemory_appmanager"
            style="@style/textview12sp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_appmanager"
        android:listSelector="@color/transparent"
        ></ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_appnumber"
        android:padding="5dp"
        android:textColor="@color/black"
        android:background="@color/graye5"
        />

</FrameLayout>

</LinearLayout>
