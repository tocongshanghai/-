<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#10000000"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/view_black_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="15dp"
        android:background="@mipmap/brightpurple_contact_icon"
        />

    <RelativeLayout

        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        >
        <TextView

            android:id="@+id/tv_black_name"
            style="@style/textview14sp"
            android:text="黑名单名字"
            android:textColor="@color/bright_red"
            />
        <TextView
            style="@style/textview14sp"
            android:layout_below="@id/tv_black_name"
            android:text="拦截模式"
            android:textColor="@color/bright_red"
            android:id="@+id/tv_black_mode"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:background="@mipmap/delete_icon"
       android:layout_gravity="center_vertical"
        android:id="@+id/view_black_delete"
        />
</LinearLayout>
